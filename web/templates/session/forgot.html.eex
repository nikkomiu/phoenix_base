<h3 class="text-xs-center">Reset your password</h3>
<div class="login-card">
  <div class="card-block">
    <%= form_for @conn, session_path(@conn, :forgot), [as: :session], fn f -> %>
      <div class="form-group">
        <%= label f, :email, "Email address" %>
        <%= text_input f, :email, class: "form-control", autofocus: true %>
      </div>

      <%= submit "Send reset instructions", class: "btn btn-outline-primary btn-block" %>
    <% end %>
  </div>
</div>
